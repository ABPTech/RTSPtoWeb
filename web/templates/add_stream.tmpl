{{template "head.tmpl" .}}
<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">Add stream</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Add stream</li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</div>




  <section class="content">
    <div class="container-fluid">
      <div class="row">

        <div class="col-6">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Main stream<small> parameters</small></h3>
            </div>

              <div class="card-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Stream name</label>
                  <input type="text" class="form-control" name="stream-name" placeholder="Enter stream name">
                  <small  class="form-text text-muted">You can choose any name for the stream, for example "My room" or  "Happy sausage"</small>
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Stream url</label>
                  <input type="text" name="stream-url" class="form-control"  placeholder="Enter stream url">
                  <small  class="form-text text-muted">Enter rtsp address as instructed by your camera. Look like rtsp://&lt;ip&gt;:&lt;port&gt;/path </small>
                </div>
                <div class="form-group">
                  <label for="inputStatus">Stream type</label>
                  <select class="form-control custom-select" name="stream-ondemand">
                    <option selected disabled><small>Select One</small></option>
                    <option value="1">On demand only</option>
                    <option value="0">Persistent connection</option>
                  </select>
                  <small  class="form-text text-muted">On persistent connection, the server get data from the camera continuously. On demand, the server get data from the camera only when you click play button </small>
                </div>
                <div class="form-group">
                  <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" name="debug" id="debug-switch">
                    <label class="custom-control-label" for="debug-switch">Enable debug</label>
                  </div>
                  <small  class="form-text text-muted">Select this options if you want get more data about the stream </small>
                </div>
                <!-- <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="debug" >
                    <label class="form-check-label">Debug</label>
                </div> -->

              </div>
            </div>
          </div>
          <div class="col-6">
            <div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">Substream<small> parameters</small></h3>
              </div>
                <div class="card-body">
                  <div class="form-group">
                    <div class="custom-control custom-switch custom-switch-on-success">
                      <input type="checkbox" class="custom-control-input" id="enable-sub">
                      <label class="custom-control-label" for="enable-sub">Enable substream settings</label>
                    </div>
                    <small  class="form-text text-muted">Select this options if you want add substream</small>
                  </div>

                  <div class="form-group">
                    <label for="exampleInputPassword1">Substream url</label>
                    <input type="text" name="substream-url" class="form-control"  placeholder="Enter stream url" disabled>
                    <small  class="form-text text-muted">Enter rtsp address as instructed by your camera. Look like rtsp://&lt;ip&gt;:&lt;port&gt;/path </small>
                  </div>
                  <div class="form-group">
                    <label for="inputStatus">Substream type</label>
                    <select class="form-control custom-select" name="substream-ondemand" disabled>
                      <option selected disabled><small>Select One</small></option>
                      <option value="1">On demand only</option>
                      <option value="0">Persistent connection</option>
                    </select>
                    <small  class="form-text text-muted">On persistent connection, the server get data from the camera continuously. On demand, the server get data from the camera only when you click play button </small>
                  </div>
                  <div class="form-group">
                    <div class="custom-control custom-switch">
                      <input type="checkbox" class="custom-control-input" name="substream-debug" id="substream-debug-switch" disabled>
                      <label class="custom-control-label" for="substream-debug-switch">Enable debug</label>
                    </div>
                    <small  class="form-text text-muted">Select this options if you want get more data about the stream </small>
                  </div>
                </div>
            </div>
            </div>

            <div class="col-12">
              <button type="button" onclick="addStreamSubmit()" class="btn btn-primary">Add stream</button>
            </div>

        </div>
    </div>
  </section>

{{template "foot.tmpl" .}}

<script>
function addStreamSubmit(){
  var params = {
    uuid:randomUuid(),
    name:$('input[name="stream-name"]').val(),
    channels:{
      "0":{
        url:$('input[name="stream-url"]').val(),
        on_demand:Boolean(parseInt($('select[name="stream-ondemand"]').val())),
        debug:Boolean($('input[name="debug"]').prop('checked')),
      }
    }
  }
  if($('#enable-sub').prop('checked')){
    params.channels[1]={
      url:$('input[name="substream-url"]').val(),
      on_demand:Boolean(parseInt($('select[name="substream-ondemand"]').val())),
      debug:Boolean($('input[name="substream-debug"]').prop('checked')),
    }
    if (params.channels[1].on_demand==null) {
      params.channels[1].on_demand=true;
    }
  }

  if (params.channels[0].on_demand==null) {
    params.channels[0].on_demand=true;
  }

  goRequest('add', params.uuid, params);
}

$('#enable-sub').on('change',function(){
  if($(this).prop('checked')){
    $('input[name="substream-url"]').attr('disabled',false);
    $('select[name="substream-ondemand"]').attr('disabled',false);
    $('input[name="substream-debug"]').attr('disabled',false);
  }else{
    $('input[name="substream-url"]').attr('disabled',true);
    $('select[name="substream-ondemand"]').attr('disabled',true);
    $('input[name="substream-debug"]').attr('disabled',true);
  }
});
</script>
