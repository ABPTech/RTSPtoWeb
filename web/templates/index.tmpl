          </div>
          <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->
    </div>


    <div class="row">
      <div class="col-6">
        <h5 class="mt-4 mb-2">Streams</h5>
      </div>
      <div class="col-6">

          <div class="input-group-prepend float-right mt-3">
            <a class="btn" data-toggle="dropdown" style="padding-right: 0;">
              <i class="fas fa-lg fa-sort"></i>
            </a>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="#">Name <i class="fas fa-sort-alpha-down float-right"></i> </a>
              <a class="dropdown-item" href="#">Name <i class="fas fa-sort-alpha-up float-right"></i></a>
            </div>
          </div>

      </div>
    </div>
    <div class="row mt-3 ">
      <div class="col-12">
        <div class="streams-vs-player">
          <div class="player mb-3">
            <video id="videoPlayer" autoplay controls></video>
            <canvas id="canvas" class="d-none"></canvas>
          </div>
          <div class="streams-wrapper">
            <div class="streams">
              {{ range $key, $value := .streams }}
              <div class="item" id="{{ $key }}">
                <div class="stream">
                  <div class="thumbs" onclick="rtspPlayer.livePlayer(0, '{{ $key }}')">
                    <img src="../static/img/noimage.svg" alt="" class="stream-img">
                  </div>
                  <div class="text">
                    <h5> {{ .Name }}</h5>
                    <p>
                      property
                    </p>
                    <div class="input-group-prepend dropleft text-muted">
                      <a class="btn" data-toggle="dropdown" >
                        <i class="fas fa-ellipsis-v"></i>
                      </a>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" onclick="rtspPlayer.livePlayer('hls', '{{ $key }}')" href="#">Play HLS</a>
                        <a class="dropdown-item" onclick="rtspPlayer.livePlayer('mse', '{{ $key }}')" href="#">Play MSE</a>
                        <a class="dropdown-item" onclick="rtspPlayer.livePlayer('webrtc', '{{ $key }}')" href="#">Play WebRTC</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" onclick="showEditStream('{{ $key }}')" href="#">Edit</a>
                        <a class="dropdown-item" onclick="deleteStream('{{ $key }}')" href="#">Delete</a>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
              {{end}}




          </div>

          </div>
        </div>
      </div>
    </div>
